<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/range_select_horizontal_item_root_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="8dp"
              android:background="@drawable/shape_card"
              android:clickable="true"
              android:elevation="@dimen/button_elevation"
              android:focusable="true"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="8dp"
              android:paddingTop="20dp"
              android:paddingRight="8dp"
              android:paddingBottom="16dp"
              android:stateListAnimator="@animator/rise_button_layout">

    <ImageView
        android:id="@+id/range_select_horizontal_item_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@mipmap/g_clef_octave4_c_c"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/range_select_horizontal_item_range_text_view"
            style="@style/mini_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            tools:text="ド〜ファ"/>

        <TextView
            android:id="@+id/range_select_horizontal_item_record_text_view"
            style="@style/mini_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="記録：10"/>

    </LinearLayout>

</LinearLayout>