<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="characters"
            type="com.tachisatok.notelesson.constant.Characters"/>

        <variable
            name="viewModel"
            type="com.tachisatok.notelesson.view.game.GamePlayingViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBase"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45"
                android:clipChildren="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/shape_level_select_layout"
                    android:padding="16dp"
                    app:startFailAnim="@{viewModel.failCount}">

                    <TextView
                        android:id="@+id/game_playing_fragment_remaining_time_label_text_view"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@{characters.REMAINING_TIME_LABEL.getString(context)}"
                        tools:text="残り時間："/>

                    <TextView
                        android:id="@+id/game_playing_fragment_remaining_time_text_view"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/game_playing_fragment_remaining_time_label_text_view"
                        android:text="@{viewModel.timeCountStr}"
                        tools:text="20"/>

                    <TextView
                        android:id="@+id/game_playing_fragment_correct_answer_label_text_view"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/game_playing_fragment_remaining_time_label_text_view"
                        android:text="@{characters.CORRECT_ANSWER_NUMBER.getString(context)}"
                        tools:text="正解数："/>

                    <TextView
                        android:id="@+id/game_playing_fragment_correct_answer_text_view"
                        style="@style/default_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/game_playing_fragment_correct_answer_label_text_view"
                        android:layout_toRightOf="@+id/game_playing_fragment_correct_answer_label_text_view"
                        android:text="@{viewModel.correctCountStr}"
                        tools:text="10"/>

                    <ImageView
                        android:id="@+id/game_playing_fragment_clef_image_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:imageSrc="@{viewModel.questionImageRes}"
                        tools:src="@mipmap/g_clef_octave4_c"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_game_playing_correct"
                    android:visibility="gone"
                    app:startCorrectAnim="@{viewModel.correctCount}"/>

            </FrameLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.55"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingStart="16dp"
                android:paddingTop="40dp"
                android:paddingEnd="16dp"
                android:paddingBottom="40dp">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingEnd="@dimen/center_answer_padding"
                        android:paddingBottom="@dimen/center_answer_padding">

                        <include
                            layout="@layout/game_playing_answer_layout"
                            android:clipChildren="false"
                            app:scale="@{viewModel.answerChoiceScale1}"
                            app:viewModel="@{viewModel}"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/center_answer_padding"
                        android:paddingBottom="@dimen/center_answer_padding">

                        <include
                            layout="@layout/game_playing_answer_layout"
                            app:scale="@{viewModel.answerChoiceScale2}"
                            app:viewModel="@{viewModel}"/>

                    </FrameLayout>

                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingTop="@dimen/center_answer_padding"
                        android:paddingEnd="@dimen/center_answer_padding">

                        <include
                            layout="@layout/game_playing_answer_layout"
                            app:scale="@{viewModel.answerChoiceScale3}"
                            app:viewModel="@{viewModel}"/>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:paddingStart="@dimen/center_answer_padding"
                        android:paddingTop="@dimen/center_answer_padding">

                        <include
                            layout="@layout/game_playing_answer_layout"
                            app:scale="@{viewModel.answerChoiceScale4}"
                            app:viewModel="@{viewModel}"/>

                    </FrameLayout>

                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</layout>